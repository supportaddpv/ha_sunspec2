[ req ]
default_bits       = 2048
distinguished_name = req_distinguished_name
req_extensions     = v3_req
prompt             = no

[ req_distinguished_name ]
C  = US
ST = STATE
L  = LOCAL
O  = ORG
OU = SUBORG
CN = SunSpecModbusSecurityClient

[ v3_req ]
keyUsage = critical, digitalSignature, nonRepudiation, keyEncipherment
extendedKeyUsage = clientAuth
basicConstraints = CA:FALSE

# SunSpec Role OID: 1.3.6.1.4.1.50316.802.1, value: "ReadOnlySunSpec" as ASN1 UTF8String
1.3.6.1.4.1.50316.802.1=ASN1:UTF8String:ReadOnlySunSpec
